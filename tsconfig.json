{
  "compilerOptions": {
    "target": "ES2016",

    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "paths": {
      "@interfaces": ["./src/interfaces"],
      "@models": ["./src/models"],
      "@modules": ["./src/modules"],
      "@errors": ["./src/errors"],
      "@utils": ["./src/utils"],
      "@middlewares": ["./src/middlewares"],
      "@config": ["./src/config"],
      "@controllers": ["./src/controllers"]
    },

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
